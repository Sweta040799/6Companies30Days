 int numOfWays(int n, int x)
    {
        long long dp[n+1];
        const int mod = 1e9+7;
        memset(dp,0,sizeof(dp));
        
        dp[0] = dp[1] = 1;
        
        int mx = pow(n,1.0/x);
        
        for(int i=2;i < mx + 1;i++){
            int temp = pow(i,x);
            
            for(int j = n; j >= temp; j--)
              dp[j] = (dp[j] + dp[j-temp])%mod;
        }
      return dp[n];
    }
